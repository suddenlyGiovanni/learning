{
  "name": "learning",
  "version": "0.0.0",
  "repository": "git@github.com:suddenlyGiovanni/learning.git",
  "author": "Giovanni Ravalico <15946771+suddenlyGiovanni@users.noreply.github.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "pnpm": ">=6",
    "node": ">=16"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "dtslint": "4.0.4",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.3",
    "husky": "7.0.2",
    "lerna": "4.0.0",
    "prettier": "2.4.1",
    "typescript": "4.4.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "cz": "git-cz",
    "format:base": "prettier --parser typescript",
    "format:check": "npm run format:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "format:write": "npm run format:base -- --write \"src/**/*.{ts,tsx}\"",
    "preinstall": "npx only-allow pnpm",
    "pub": "lerna publish",
    "purge-node_modules": "rm -rf node_modules",
    "test": "lerna run test",
    "test-types": "dtslint --expectOnly --localTs node_modules/typescript/lib types",
    "typecheck": "tsc --project tsconfig.json --incremental false --noEmit "
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "volta": {
    "node": "16.10.0"
  }
}
